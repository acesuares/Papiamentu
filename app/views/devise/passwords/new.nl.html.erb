<div id="devise">
  <% @logo_right = 'papiamentu-welkom.png' %>
  <%= render "shared/frontend_header" %>
  <% @default_message = 'login_with_email_and_password' -%>
  <div class="row" id="sign_in">
    <div class="column">
      <h2>Did you forget your password? No ta problema!</h2>
      <p>Yena bo adrès elektróniko i despues nos ta manda instrukshon pa bo kambia bo kódigo di akseso.</p>
      <h3>Yena awor bo adrès elektróniko</h3>
      <div id="sign_in_form">
        <div id="flash_message">
          <%= render "devise/shared/error_messages" %>
        </div>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <br /> <%= f.email_field :email %><br /><br />
          <div class="text-right"><%= f.submit 'Manda instrukshon', class: :button %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "shared/frontend_footer" %>
