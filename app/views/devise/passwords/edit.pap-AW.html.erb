<div id="devise">
  <% @logo_right = 'papiamentu-welkom.png' %>
  <%= render "shared/frontend_header" %>
  <% @default_message = 'login_with_email_and_password' -%>
  <div class="row" id="sign_in">
    <div class="column large-6 medium-8 small-12 topper">
      <h2>Kambia Wachtwoord?</h2>
      <p>
        Om uw wachtwoord voor papiamentu te wijzigen, kunt u hieronder twee keer het door u gewenste nieuwe wachtwoord invoeren.
      </p>
      <div id="sign_in_form">
        <div id="flash_message">
          <%= render "devise/shared/error_messages" %>
        </div>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          Nieuw wachtwoord
          <%= f.password_field :password %><br />
          Voer het nieuwe wachtwoord nog eens in ter bevestiging
          <%= f.password_field :password_confirmation %><br />
          <div class="text-right"><%= f.submit t("inline_forms.devise.submit.change_password"), class: :button %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "shared/frontend_footer" %>
