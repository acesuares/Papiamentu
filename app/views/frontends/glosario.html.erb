<div class="columns small-12 medium-6 large-8 topper  bordered">
  <h2>
    <%= @glossary.title %>
  </h2>

  <div class="pap_description bordered">
    <%= content_tag :p, @glossary.description %>
    <% alpha = @glossary.words.order("name ASC").group_by{|u| u.name[0]}
       alpha.each do |letter, items| %>
        <h3><%= letter %></h3>
        <p>
        <% items.each do |item| %>
          <%= link_to_word item %>
        <% end %>
        </p>
    <% end %>
  </div>

</div>

<div class="columns small-12 medium-6 large-4 topper bordered" id="right-side">
  <!-- <%= render 'glosario_sponser'%> -->
  <%= link_to('Baha dokumento PDF', "/glosario/#{@glossary.name}.pdf") %>
</div>
